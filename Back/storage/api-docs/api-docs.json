                    },
                    "text": {
                        "type": "string",
                        "example": "New description"
                    }
                },
                "type": "object"
            },
            "PostUpdate": {
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Updated title"
                    },
                    "text": {
                        "type": "string",
                        "example": "Updated description"
                    }
                },
                "type": "object"
            },
            "Post": {
                "title": "Post",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Title"
                    },
                    "text": {
                        "type": "string",
                        "example": "Text"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
